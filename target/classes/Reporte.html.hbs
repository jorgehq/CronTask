{{# partial "contenido" }}
    <head>
      <meta charset="UTF-8">
          <meta name="viewport" content="width=device-width, initial-scale=1">

          <link rel="stylesheet" type="text/css" href="/assets/Reportes.css">
        <link rel="stylesheet" type="text/css" href="/assets/general.css">
          <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet"
                integrity="sha384-T3c6CoIi6uLrA9TneNEoa7RxnatzjcDSCmG1MXxSR1GAsXEV/Dwwykc2MPK8M2HN"
                crossorigin="anonymous">
      </head>
      <body >
        <h1 class="titulosPantallasSinLayout">Reportes</h1>
      <form action="/reporte" method="GET">
          <div class="row">
              <div class="col">
                     <div class="form-floating">
                         <select class="form-control" id="filtro" name="eleccion" required>
                             <option value=""disabled selected>Seleccion tipo de reporte</option>
                             <option value="FALLAS">Fallas por heladera</option>
                             <option value="VIANDASRETIRADAS">Viandas retiradas y colocaldas</option>
                             <option value="VIANDASPORCOLABORADOR">Viandas por colaborador</option>
                             <option value="PUNTAJECOLABORADOR">Puntaje Colaborador</option>

                         </select>
                         <label for="filtro">Filtros</label>
                     </div>
              </div>
              <div class="col">
                  <div id="botonSubmitFiltro" class="form-floating">
                      <input class="botonPrincipal" type="submit" value="Filtro">
                  </div>
              </div>
          </div>
      </form>

        <form action="/descargas" method="GET">
            <section id="contenerdorHeladeras">
                <div class="fondoContenedor">
                    <!-- Datos de Heladeras -->
                    {{#if heladeras}}
                    <ul>
                        <strong>{{tiporeporte}}</strong>  <br>
                        {{#each heladeras}}
                        <li>
                            <div class="contenedor-heladera">
                                <div class="info-contenido">
                                    <strong>Nombre:</strong> {{@key.nombre}} <br>
                                    <strong>Dirección:</strong> {{@key.direccion.provincia}} {{@key.direccion.localidad}} {{@key.direccion.direccion}} <br>
                                    <strong>Cantidad:</strong> {{this}}
                                </div>
                            </div>
                            {{#unless @last}}
                            <div class="lineaDivisoria"></div>
                            {{/unless}}
                        </li>
                        {{/each}}
                    </ul>
                    {{/if}}

                    <!-- Datos de Colaboradores -->
                    {{#if colaboradores}}
                    <strong>{{tiporeporte}}</strong>  <br>
                    <ul>
                        {{#each colaboradores}}
                        <li>
                            <div class="contenedor-colaborador">
                                <div class="info-contenido">
                                    <strong>Nombre:</strong> {{@key.nombre}} <br>
                                    <strong>Documento:</strong> {{@key.getDocumento}} ({{@key.getTipoDocumento}}) <br>
                                    <strong>Dirección:</strong> {{@key.direccion.provincia}} {{@key.direccion.localidad}} {{@key.direccion.direccion}} <br>
                                    <strong>Puntaje:</strong> {{this}}
                                </div>
                            </div>
                            {{#unless @last}}
                            <div class="lineaDivisoria"></div>
                            {{/unless}}
                        </li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </div>
            </section>
            <div class="col">
                <div id="BotonFiltraDescargar" class="form-floating">
                    <input class="botonPrincipal" type="submit" value="Descargar">
                </div>

            </div>
        </form>
{{/partial}}

